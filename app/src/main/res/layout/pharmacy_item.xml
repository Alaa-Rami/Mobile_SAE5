<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Affichage des informations de la pharmacie -->
    <TextView
        android:id="@+id/pharmacyInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Nom: Pharmacie XYZ\nAdresse: Rue A, Ville\nVille: Paris\nTéléphone: 01 23 45 67 89\nHoraires: 9h - 18h\nEst de garde: Non"
        android:textSize="16sp"
        android:lineSpacingExtra="4sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Bouton pour modifier la pharmacie -->
    <Button
        android:id="@+id/modifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pharmacyInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Bouton pour supprimer la pharmacie -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/modifyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/holo_red_light"/>
</androidx.constraintlayout.widget.ConstraintLayout>
