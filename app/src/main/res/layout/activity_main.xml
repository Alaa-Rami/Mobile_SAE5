<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Button to Add a new medicine -->
    <Button
        android:id="@+id/btnAddMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Medicine"
        app:layout_constraintBottom_toTopOf="@+id/btnShowMedicines"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button to Show all medicines -->
    <Button
        android:id="@+id/btnShowMedicines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Medicines"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdateMedicine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddMedicine" />

    <!-- Button to Update a medicine -->
    <Button
        android:id="@+id/btnUpdateMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Medicine"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteMedicine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowMedicines" />

    <!-- Button to Delete a medicine -->
    <Button
        android:id="@+id/btnDeleteMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Medicine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdateMedicine" />
    <Button
        android:id="@+id/btnExportMedicines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Medicines"
        app:layout_constraintBottom_toTopOf="@+id/btnAddMedicine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteMedicine" />

</androidx.constraintlayout.widget.ConstraintLayout>
